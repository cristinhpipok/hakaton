<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-sm-6">

<h1>Create New post!</h1>
<%= form_for @post do |f| %>
<div class="form-group">
  <%= f.text_field :title, placeholder: "Titulo!" %>
 </div>
 <div class="form-group">
  <%= f.text_area :description, placeholder: "Escribe el post!" %>
 </div>
  <div>
  <%= f.submit "Post", class: "btn btn-dark btn-lg btn-block"%>
  </div>
<% end %>
</div>
  </div>
</div>
