<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-sm-6">
      <h1><%= form_title %></h1>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre de usuario" %>
        </div>
        <div class="form-group">
          <%= f.url_field :email, class: "form-control input-lg", placeholder: "Ingresa el email del usuario" %>
        </div>
        <div>
          <%= f.submit form_title, class: "btn btn-dark btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
